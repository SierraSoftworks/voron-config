{
	servers {
		metrics
	}
}

localhost, voron.raptor-perch.ts.net {
	root * /printing/mainsail
	encode gzip

	# Forward requests to the API server
	@api {
		path /access/* || /api/* || /machine/* || /printer/* || /server/*
	}
	handle @api {
		tracing {
			span api
		}

		reverse_proxy http://localhost:7125
	}

	handle /websocket {
		reverse_proxy http://localhost:7125 {
			header_up Host {host}
			header_up X-Real-IP {remote_host}
		}
	}

	@cam {
		path /webcam || /webcam/* || /webcam2 || /webcam2/* || /cam
	}

	handle @cam {
		# go2rtc
		reverse_proxy http://localhost:1984
		# MediaMTX HLS
		#reverse_proxy http://localhost:8887
		# MediaMTX WebRTC
		#reverse_proxy http://localhost:8889
	}

	handle {
		# Disable caching of the index.html file
		header /index.html ?Cache-Control "no-store, no-cache, must-revalidate"

		try_files {path} {path}/ /index.html
		file_server
	}
}
